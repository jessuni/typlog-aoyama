<header class="side-subject">
  <div class="subject-info">
    {% if type == 'site' %}
      <a href="{{ linkify('/') }}">
    {% endif %}
    {% set cover = None %}
    {% if type == 'author' and subject.avatar %}
      {% set cover = subject.avatar %}
    {% elif subject.logo %}
      {% set cover = subject.logo.src %}
    {% elif subject.cover %}
      {% set cover = subject.cover.src %}
    {% endif %}
    {% if cover %}
      <img class="avatar" src="{{ cover|thumbnail('ss') }}" alt="{{ subject.name }} logo">
    {% endif %}
    <h1 class="subject-name">{{ subject.name or subject.title }}</h1>
    {% if type == 'site' %}
      </a>
    {% endif %}
    {% if subject.metadata %}
      <ul>
        {% for key, value in subject.metadata.items() %}
          <li><a href="{{ value }}" target="_blank"><i class="icon icon-{{ key }}"></i></a></li>
        {% endfor %}
      </ul>
    {% endif %}
    {% set summary = subject.summary or subject.bio %}
    {% if summary %}
      <h2 class="subject-description">{{ summary }}</h2>
    {% endif %}
  </div>
{% if type == 'tag' or type == 'author' or type == 'site' %}
  <div class="side-mark">
    <a href="{{ linkify('/') }}">
    {% if site.logo %}
      <img class="avatar" src="{{ site.logo.src|thumbnail('ss') }}" alt="{{ site.name }} logo" />
    {% endif %}
    {{ site.name }}
    </a>
  </div>
{% endif %}
</header>
